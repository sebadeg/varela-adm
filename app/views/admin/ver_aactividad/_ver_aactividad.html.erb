<%= form_tag(admin_ver_aactividad_ver_path, :method => "post") do %>
	<%= select_tag :alumno_id, options_for_select( Alumno.where("id IN (SELECT alumno_id FROM sector_alumnos WHERE sector_id IN (" + Alumno.sector(AdminUsuario.find(usuario_id)) + ") AND anio IN (SELECT anio FROM configs WHERE NOT anio IS NULL) AND NOT alumno_id IS NULL)").order(:nombre).map{|u| ["#{u.id} - #{u.nombre} #{u.apellido}", u.id]},alumno_id) %>
    <%= submit_tag "Ver" %>
<% end %>
<br><br>




<div class="col-md-12 col-sm-12 col-xs-12 content-table">
	<div class="panel-group sub-grupo">
		<div class="panel panel-default">
			<div class="col-md-12 col-sm-12 col-xs-12 content-table">



<% t = alumno_id %>
<% @act = AactividadAlumno.where(['alumno_id = ?',t]).order("aactividad_id") %>
<% if (@act != nil) %>
	<% @act.each do |a| %>
		<% @actividad = Aactividad.find(a.aactividad_id) rescue nil %>
		<% if @actividad != nil && (@actividad.fechainfo == nil || @actividad.fechainfo >= DateTime.now ) %>
		    <br>
			
			<%= link_to "Descargar informaciÃ³n: #{@actividad.nombre}", url: admin_ver_aactividad_descargar_path(@actividad.id) %><br>

		    <% if @actividad.fecha == nil || @actividad.fecha >= DateTime.now %>

		    	<% arreglo = a.opciones() %>
		    	<% p arreglo %>

				<% if arreglo[:opciones].count > 0 %>

					<%= form_tag(admin_ver_aactividad_confirmar_path, :method => "post") do %>

					    <% if arreglo[:elecciones][a.opcion] != nil %>
					    	<b><%= p arreglo[:elecciones][a.opcion] %></b>
					    <% else %>
					    	<b><%= p "" %></b>
					    <% end %>
						<%= select_tag :opcion, options_for_select(arreglo[:opciones], a.opcion) %><br>
			            <%= submit_tag "Confirmar"  %>
					<% end %>												
				<% end %>	
				<br>
			<% end %>
		<% end %>
	<% end %>
<% end %>

			</div>
		</div>
	</div>
</div>
