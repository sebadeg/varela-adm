<%= form_tag(admin_ver_aactividad_ver_path, :method => "post") do %>
	<%= select_tag :alumno_id, options_for_select(Alumno.all.order(:nombre,:apellido).map{|u| ["#{u.id} - #{u.nombre} #{u.apellido}", u.id] },alumno_id) %>
    <%= submit_tag "Ver" %>
<% end %>
<br><br>

<% x = Aactividad.new %>
<% y = AactividadAlumno.new %>
<% t = alumno_id %>
<% @act = AactividadAlumno.where(['alumno_id = ?',t]).order("aactividad_id") %>
<% if (@act != nil) %>
	<% @act.each do |a| %>
		<% @actividad = Aactividad.find(a.aactividad_id) rescue nil %>
		<% if @actividad != nil && (@actividad.fechainfo == nil || @actividad.fechainfo >= DateTime.now ) %>
		    <br>
			
			<%= form_for(x, as: :aactividad, url: '#', :html => {:id=>'form_download_' + a.aactividad_id.to_s}) do |f| %>
	           <%= f.hidden_field :id, value: @actividad.id %>
					<b><%= link_to "Descargar informaciÃ³n: " + @actividad.nombre, "", :onclick => "$('#form_download_" + a.aactividad_id.to_s + "').submit()" %></b>
			<% end %>

		    <% if @actividad.fecha == nil || @actividad.fecha >= DateTime.now %>

		    	<% arreglo = a.opciones() %>
		    	<% p arreglo %>

				<% if arreglo[:opciones].count > 0 %>

					<%= form_for(y, as: :actividad_alumno, url: '#') do |f| %>


					    <% if arreglo[:elecciones][a.opcion] != nil %>
					    	<b><%= p arreglo[:elecciones][a.opcion] %></b>
					    <% else %>
					    	<b><%= p "" %><b>
					    <% end %><br><br>

			            <%= f.hidden_field :alumno_id, value: t %>
			            <%= f.hidden_field :aactividad_id, value: a.aactividad_id %>

						
						<%= f.select :opcion, options_for_select(arreglo[:opciones], a.opcion)  %><br><br>
			            <%= f.submit "Confirmar"  %>

					<% end %>												
				<% end %>	
				<br>
			<% end %>
		<% end %>
	<% end %>
<% end %>
